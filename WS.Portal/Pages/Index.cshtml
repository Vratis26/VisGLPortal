@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div id="main-content-wrapper">
        <main class="pure-u-1 animated fadeIn">
            <section class="section-wrapper">
                <article class="w-100">
                    <div class="two-column-layout row" id="13210">
                        <h2 class="text-center">APLICATION FOR VISUALIZATION OF GLASSES</h2>
                        <div class="text-right w-100">@Html.ActionLink("Show all", "AllGlasses", "Home", null, new { @class = "btn btn-success" })</div>
                        @if (Model.glasses.Count() > 0)
                        {
                            <table class="table table-striped table-bordered mt-4">
                                <thead>
                                    <tr>
                                        <th class="text-center">Serial number</th>
                                        <th class="text-center">Width</th>
                                        <th class="text-center">Height</th>
                                        <th class="text-center">Package number</th>
                                        <th class="text-center">Control date</th>
                                        <th class="text-center">Edit glass</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var glass in Model.glasses)
                                    {
                                        <tr>
                                            <td class="text-center">@glass.SerialNum</td>
                                            <td class="text-center">@glass.Width</td>
                                            <td class="text-center">@glass.Height</td>
                                            <td class="text-center">@glass.PackNum</td>
                                            <td class="text-center">@glass.ControlDate</td>
                                            <td class="text-center"><a asp-page="/Edit/Edit" asp-route-id="@glass.IdGlass" class="btn btn-outline-success border border-success">Edit</a></td>
                                        </tr>
                                    }



                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-warning border border-warning mt-3 w-100 text-center">There are no glasses in the database</div>
                        }
                    </div>
                </article>
            </section>
        </main>
    </div>
</div>>
</div>
